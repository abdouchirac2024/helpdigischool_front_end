# ============================================
# Help Digi School - Frontend Next.js
# Variables d'environnement - DEVELOPMENT
# ============================================
# Copiez ce fichier vers .env.local

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Help Digi School (Dev)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_DESCRIPTION=Plateforme de gestion scolaire pour les Ã©coles primaires
NEXT_PUBLIC_ENVIRONMENT=development

# ============================================
# API - MICROSERVICES SPRING BOOT
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1
NEXT_PUBLIC_API_TIMEOUT=30000

# ============================================
# DOCKER
# ============================================
FRONTEND_PORT=3000
VERSION=latest

# ============================================
# AUTHENTIFICATION
# ============================================
NEXT_PUBLIC_SESSION_DURATION=3600

# ============================================
# FEATURES FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ============================================
# UPLOADS
# ============================================
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf