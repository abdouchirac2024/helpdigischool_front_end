# ============================================
# Help Digi School - Frontend Next.js
# Variables d'environnement
# ============================================
# Copiez ce fichier vers .env.local (dev) ou .env.production (prod)

# ============================================
# APPLICATION
# ============================================
NEXT_PUBLIC_APP_NAME=Help Digi School
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_DESCRIPTION=Plateforme de gestion scolaire pour les écoles primaires

# ============================================
# API - MICROSERVICES SPRING BOOT
# ============================================
# URL de l'API Gateway (point d'entrée unique vers les microservices)
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1

# Timeout pour les requêtes API (en ms)
NEXT_PUBLIC_API_TIMEOUT=30000

# ============================================
# DOCKER
# ============================================
# Port du frontend
FRONTEND_PORT=3000

# Version de l'image Docker
VERSION=latest

# ============================================
# AUTHENTIFICATION
# ============================================
# Durée de session (en secondes)
NEXT_PUBLIC_SESSION_DURATION=3600

# ============================================
# FEATURES FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ============================================
# ANALYTICS (Optionnel)
# ============================================
# NEXT_PUBLIC_GA_TRACKING_ID=
# NEXT_PUBLIC_HOTJAR_ID=

# ============================================
# SENTRY (Optionnel - Monitoring des erreurs)
# ============================================
# SENTRY_DSN=
# SENTRY_AUTH_TOKEN=
# NEXT_PUBLIC_SENTRY_DSN=

# ============================================
# UPLOADS
# ============================================
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
