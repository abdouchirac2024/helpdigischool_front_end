# ============================================
# Traefik - Variables d'environnement
# ============================================

# Timezone
TZ=Europe/Paris

# Let's Encrypt
ACME_EMAIL=admin@helpdigischool.com

# Dashboard Authentication (générer avec: htpasswd -nb admin password)
TRAEFIK_DASHBOARD_AUTH=admin:$$apr1$$xyz...

# IP Whitelist pour production (optionnel)
ALLOWED_IPS=127.0.0.1/32,10.0.0.0/8

# Log Level (DEBUG, INFO, WARN, ERROR)
TRAEFIK_LOG_LEVEL=INFO