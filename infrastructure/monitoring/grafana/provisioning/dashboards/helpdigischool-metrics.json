{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "title": "Frontend Status",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "options": {
                "0": { "text": "DOWN", "color": "red" },
                "1": { "text": "UP", "color": "green" }
              },
              "type": "value"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [{ "expr": "helpdigischool_up", "refId": "A" }]
    },
    {
      "title": "Uptime",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": { "mode": "absolute", "steps": [{ "color": "blue", "value": null }] }
        },
        "overrides": []
      },
      "targets": [{ "expr": "helpdigischool_uptime_seconds", "refId": "A" }]
    },
    {
      "title": "HTTP Requests Total",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] }
        },
        "overrides": []
      },
      "targets": [{ "expr": "helpdigischool_http_requests_total", "refId": "A" }]
    },
    {
      "title": "HTTP Errors Total",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [{ "expr": "helpdigischool_http_errors_total", "refId": "A" }]
    },
    {
      "title": "Prometheus Targets",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] }
        },
        "overrides": []
      },
      "targets": [{ "expr": "count(up)", "refId": "A" }]
    },
    {
      "title": "Targets Down",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [{ "expr": "count(up == 0) or vector(0)", "refId": "A" }]
    },
    {
      "title": "Node.js Memory Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": { "fillOpacity": 20, "lineWidth": 2 }
        },
        "overrides": []
      },
      "targets": [
        { "expr": "helpdigischool_nodejs_rss_bytes", "legendFormat": "RSS", "refId": "A" },
        {
          "expr": "helpdigischool_nodejs_heap_total_bytes",
          "legendFormat": "Heap Total",
          "refId": "B"
        },
        {
          "expr": "helpdigischool_nodejs_heap_used_bytes",
          "legendFormat": "Heap Used",
          "refId": "C"
        },
        { "expr": "helpdigischool_nodejs_external_bytes", "legendFormat": "External", "refId": "D" }
      ]
    },
    {
      "title": "System CPU Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "max": 1,
          "custom": { "fillOpacity": 20, "lineWidth": 2 }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "1 - avg(irate(node_cpu_seconds_total{mode=\"idle\"}[5m]))",
          "legendFormat": "CPU Usage",
          "refId": "A"
        }
      ]
    },
    {
      "title": "System Memory",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": { "fillOpacity": 20, "lineWidth": 2 }
        },
        "overrides": []
      },
      "targets": [
        { "expr": "node_memory_MemTotal_bytes", "legendFormat": "Total", "refId": "A" },
        {
          "expr": "node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes",
          "legendFormat": "Used",
          "refId": "B"
        },
        { "expr": "node_memory_MemAvailable_bytes", "legendFormat": "Available", "refId": "C" }
      ]
    },
    {
      "title": "Disk Usage",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 0.7 },
              { "color": "red", "value": 0.9 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "1 - (node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"})",
          "legendFormat": "Disk /",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Network I/O",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": { "fillOpacity": 20, "lineWidth": 2 }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "irate(node_network_receive_bytes_total{device!~\"lo|veth.*|docker.*|br.*\"}[5m])",
          "legendFormat": "Received {{ device }}",
          "refId": "A"
        },
        {
          "expr": "-irate(node_network_transmit_bytes_total{device!~\"lo|veth.*|docker.*|br.*\"}[5m])",
          "legendFormat": "Sent {{ device }}",
          "refId": "B"
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "tags": ["helpdigischool", "prometheus", "metrics"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "Help Digi School - System & App Metrics",
  "uid": "helpdigischool-metrics",
  "version": 1,
  "refresh": "30s"
}
