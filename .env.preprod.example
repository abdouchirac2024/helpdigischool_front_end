# ============================================
# Help Digi School - Frontend Next.js
# Variables d'environnement - PRE-PRODUCTION
# ============================================
# Copiez ce fichier vers .env.preprod

# ============================================
# APPLICATION
# ============================================
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=Help Digi School
NEXT_PUBLIC_APP_URL=https://preprod.helpdigischool.com
NEXT_PUBLIC_APP_DESCRIPTION=Plateforme de gestion scolaire pour les écoles primaires
NEXT_PUBLIC_ENVIRONMENT=preprod

# ============================================
# API - MICROSERVICES SPRING BOOT
# ============================================
# URL de l'API Gateway Pre-Production
NEXT_PUBLIC_API_URL=https://api-preprod.helpdigischool.com/api/v1

# Timeout pour les requêtes API (en ms)
NEXT_PUBLIC_API_TIMEOUT=30000

# ============================================
# DOCKER
# ============================================
# Port du frontend (32031 pour preprod)
FRONTEND_PORT=32031

# Version de l'image Docker
VERSION=preprod-latest

# ============================================
# AUTHENTIFICATION
# ============================================
# Durée de session (en secondes)
NEXT_PUBLIC_SESSION_DURATION=3600

# ============================================
# FEATURES FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ============================================
# ANALYTICS (Optionnel)
# ============================================
# NEXT_PUBLIC_GA_TRACKING_ID=
# NEXT_PUBLIC_HOTJAR_ID=

# ============================================
# SENTRY (Monitoring des erreurs)
# ============================================
# SENTRY_DSN=
# SENTRY_AUTH_TOKEN=
# NEXT_PUBLIC_SENTRY_DSN=

# ============================================
# UPLOADS
# ============================================
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ============================================
# LOGGING (Loki)
# ============================================
# Configuration via docker-compose labels