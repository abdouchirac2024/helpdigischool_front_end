# ============================================
# Help Digi School - Frontend Next.js
# Variables d'environnement - PRODUCTION
# ============================================
# Copiez ce fichier vers .env.production

# ============================================
# APPLICATION
# ============================================
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=Help Digi School
NEXT_PUBLIC_APP_URL=https://helpdigischool.com
NEXT_PUBLIC_APP_DESCRIPTION=Plateforme de gestion scolaire pour les Ã©coles primaires
NEXT_PUBLIC_ENVIRONMENT=production

# ============================================
# API - MICROSERVICES SPRING BOOT
# ============================================
# Note: Le backend Spring Boot utilise /api sans versioning /v1
NEXT_PUBLIC_API_URL=https://api.helpdigischool.com/api
NEXT_PUBLIC_API_TIMEOUT=30000

# ============================================
# DOCKER
# ============================================
FRONTEND_PORT=3000
VERSION=latest

# ============================================
# AUTHENTIFICATION
# ============================================
NEXT_PUBLIC_SESSION_DURATION=3600

# ============================================
# FEATURES FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# ============================================
# ANALYTICS
# ============================================
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_HOTJAR_ID=

# ============================================
# SENTRY (Monitoring des erreurs)
# ============================================
# SENTRY_DSN=https://xxx@sentry.io/xxx
# SENTRY_AUTH_TOKEN=
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@sentry.io/xxx

# ============================================
# UPLOADS
# ============================================
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf